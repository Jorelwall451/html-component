{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["./lib/**/*.ts", "./tests/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
